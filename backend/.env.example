# RAGHUU CO Legal Practice Management System - Environment Configuration
# 
# This file contains all environment variables required for the application.
# Copy this file to .env and update the values according to your environment.
# 
# @author RAGHUU CO Development Team
# @version 1.0.0
# @since 2025-01-15

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3001)
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database host
DB_HOST=localhost

# PostgreSQL database port
DB_PORT=5432

# Database name
DB_NAME=raghuuco_legal

# Database username
DB_USER=postgres

# Database password
DB_PASSWORD=your_secure_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT secret key (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# JWT access token expiration time in seconds (default: 1 hour)
JWT_EXPIRES_IN=3600

# JWT refresh token expiration time in seconds (default: 7 days)
REFRESH_TOKEN_EXPIRES_IN=604800

# Session timeout in minutes (default: 30 minutes)
SESSION_TIMEOUT=30

# =============================================================================
# SOCIAL AUTHENTICATION (OPTIONAL)
# =============================================================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# LinkedIn OAuth 2.0
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:3001/api/v1/auth/linkedin/callback

# Microsoft 365 OAuth 2.0
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:3001/api/v1/auth/microsoft/callback

# =============================================================================
# FILE STORAGE (OPTIONAL)
# =============================================================================

# AWS S3 Configuration (for document storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=raghuuco-documents

# Local file storage path (fallback if S3 not configured)
LOCAL_STORAGE_PATH=./uploads

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================

# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@raghuuco.com

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL - for session storage and caching)
# =============================================================================

# Redis server host
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis password (if required)
REDIS_PASSWORD=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting - requests per 15 minutes per IP
RATE_LIMIT_MAX=100

# Password minimum length
PASSWORD_MIN_LENGTH=8

# Maximum login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_DURATION=30

# =============================================================================
# APPLICATION SPECIFIC
# =============================================================================

# Application name
APP_NAME="RAGHUU CO Legal Practice Management System"

# Application version
APP_VERSION=1.0.0

# Support email
SUPPORT_EMAIL=support@raghuuco.com

# =============================================================================
# DEVELOPMENT ONLY (DO NOT USE IN PRODUCTION)
# =============================================================================

# Enable debug mode (development only)
DEBUG=false

# Enable detailed error messages (development only)
SHOW_ERROR_DETAILS=false